@model PrimerParcial.Web.Models.BarcoViewModel;
@{
}
<h2>Registro de barcos</h2>
<form action="Registrar" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Antiguedad"></label>
        <input asp-for="Antiguedad" class="form-control" />
        <span asp-validation-for="Antiguedad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TripulacionMaxima"></label>
        <input asp-for="TripulacionMaxima" class="form-control" />
        <span asp-validation-for="TripulacionMaxima" class="text-danger"></span>
    </div>
    <input type="submit" value="Registrar" class="btn btn-primary" />
</form>
